
auto e1:0
iface e1:0 inet static
   mtu 1450
   address 10.0.0.250
   netmask 255.255.255.0

auto e5
iface e5 inet manual
  up ifconfig e5 0.0.0.0 up
  post-up ip link add link e5 e5.30 type vlan proto 802.1ad id 30
  post-up ip link set dev e5.30 name vlannet
  post-up ip link set vlannet up
  pre-down ip link del vlannet

auto e5.10
iface e5.10 inet manual
  pre-up ip link set dev e5.10 name extnet-aux0
  post-up ifconfig extnet-aux0 up
  pre-down ifconfig extnet-aux0 down
  down ip link set dev extnet-aux0 name e5.10; sleep 1

auto e5.20
iface e5.20 inet manual
  pre-up ip link set dev e5.20 name tunnet
  post-up ifconfig tunnet 10.0.1.31/24 up
  pre-down ifconfig tunnet down
  down ip link set dev tunnet name e5.20; sleep 1

